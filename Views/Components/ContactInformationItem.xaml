<UserControl x:Class="ContactBook.Views.Components.ContactInformationItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ContactBook.Views.Components"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance local:ContactInformationItem}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border>
        <StackPanel Orientation="Horizontal">
            <Grid Margin="0,0,15,0">
                <iconPacks:PackIconModern Kind="{Binding Icon}" Foreground="{DynamicResource On Surface}" Margin="5"/>
            </Grid>
            <Label Content="{Binding Content}" FontFamily="{DynamicResource Roboto}"
           Foreground="{DynamicResource On Surface}"/>
        </StackPanel>
    </Border>
</UserControl>
